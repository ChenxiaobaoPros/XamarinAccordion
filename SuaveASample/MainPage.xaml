<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             xmlns:local="clr-namespace:SuaveASample" x:Class="SuaveASample.MainPage"
             Padding="15">
    <StackLayout Spacing="0" Margin="0,10,0,0">
        
        <StackLayout x:Name="questionStack" HorizontalOptions="FillAndExpand" BackgroundColor="Purple" HeightRequest="30">
            <Label Text="Click to expand the label" TextColor="White" HorizontalOptions="Center"/>
        </StackLayout>
        
        <StackLayout x:Name="answerStack" HorizontalOptions="FillAndExpand" BackgroundColor="Yellow" HeightRequest="200">
            <Label Text="Welcome to Xamarin.Forms!      Welcome to Xamarin.Forms!      Welcome to Xamarin.Forms!      " />
        </StackLayout>
        
        <BoxView BackgroundColor="White" HeightRequest="50"/>
        
    </StackLayout>
</ContentPage>